{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Experience",
  "description": "任务执行经验数据格式",
  "type": "object",
  "required": ["task_id", "description", "tool_used", "result", "success", "duration", "timestamp"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "任务唯一标识符",
      "pattern": "^task-[0-9]{8}-[0-9]{3}$"
    },
    "description": {
      "type": "string",
      "description": "任务描述（最多200字符）",
      "maxLength": 200
    },
    "tool_used": {
      "type": "string",
      "description": "使用的工具名称",
      "enum": ["claude_code", "opencode", "gemini_cli", "qwen_code", "unknown"]
    },
    "result": {
      "type": "string",
      "description": "执行结果摘要（最多500字符）",
      "maxLength": 500
    },
    "success": {
      "type": "boolean",
      "description": "是否成功"
    },
    "duration": {
      "type": "number",
      "description": "执行时长（秒）",
      "minimum": 0
    },
    "timestamp": {
      "type": "string",
      "description": "时间戳（ISO 8601格式）",
      "format": "date-time"
    }
  }
}
